@model StaffAtt.Web.Models.StaffManagementDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Staff?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.EmailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.Alias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.Alias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.Title)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        @* Hidden inputs ensure model binding works *@
        <input asp-for="BasicInfo.Id" type="hidden" />
        <input asp-for="BasicInfo.EmailAddress" type="hidden" />

        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
