@model StaffAtt.Web.Models.StaffManagementUpdateViewModel

@{
    ViewData["Title"] = "Update";
}

<div>
    <h4>Staff's personal information.</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.Alias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.Alias)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasicInfo.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasicInfo.Title)
        </dd>
    </dl>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update"> 
            <input asp-for="@Model.BasicInfo.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.DepartmentItems" class="control-label"></label>
                <select asp-items="@Model.DepartmentItems" asp-for="@Model.BasicInfo.DepartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BasicInfo.IsApproved" class="control-label"></label>
                <input asp-for="@Model.BasicInfo.IsApproved" type="checkbox" class="form-check-input" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="List" class="btn btn-secondary">Cancel</a>
            </div>
        </form>        
    </div>
</div>


