<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StaffAtt.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StaffAtt.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Attendance</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Member") || User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Staff" asp-action="Details">Your Details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="CheckIn" asp-action="Display">Your Check-Ins</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Staff" asp-action="Update">Update Your Info</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="StaffManagement" asp-action="List">List of Staff</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="CheckIn" asp-action="List">All Check-Ins</a>
                            </li>
                        }
                    </ul>
                    <partial name="_UserMenuPartial" />
                </div>
            </div>
        </nav>
    </header>
    @{
        var success = TempData["Success"] as string;
        var error = TempData["Error"] as string;
        var info = TempData["Message"] as string;
    }
    @if (!string.IsNullOrEmpty(success))
    {
        <div class="alert alert-success fade-alert">@success</div>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger fade-alert">@error</div>
    }
    @if (!string.IsNullOrEmpty(info))
    {
        <div class="alert alert-warning fade-alert">@info</div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StaffAtt.Web - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Global fade script -->
    <script>
        setTimeout(() => {
            document.querySelectorAll('.fade-alert').forEach(a => a.style.display = 'none');
        }, 5000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>