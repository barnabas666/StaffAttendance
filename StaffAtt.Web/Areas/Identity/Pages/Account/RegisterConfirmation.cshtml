@page
@model StaffAtt.Web.Areas.Identity.Pages.Account.RegisterConfirmationModel
@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Email Confirmation</h2>

@if (Model.ConfirmationSent)
{
    <p>
        A confirmation link has been sent to <strong>@Model.Email</strong>.
        Please check your email and click the link to activate your account.
    </p>
}
else if (Model.ConfirmationSucceeded)
{
    <p class="text-success">
        Your account has been successfully confirmed!
    </p>
    <p>
        <a asp-page="/Account/Login">Click here to login</a>.
    </p>
}
else
{
    <p class="text-danger">
        @Model.ErrorMessage
    </p>
}
